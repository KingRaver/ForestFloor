{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "macos-arm64-dev",
      "displayName": "macOS ARM64 (System Clang + Ninja)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-arm64-llvm",
      "displayName": "macOS ARM64 (Homebrew LLVM + Ninja)",
      "inherits": "macos-arm64-dev",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "macos-arm64-dev",
      "configurePreset": "macos-arm64-dev"
    },
    {
      "name": "macos-arm64-llvm",
      "configurePreset": "macos-arm64-llvm"
    }
  ]
}
